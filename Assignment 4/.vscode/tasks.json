            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/Jock_Assignment4.cpp",
                "-o",
                "${workspaceFolder}/Jock_Assignment4"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
